{
    "dataSchema": {
        "name": "slider",
        "version": "0.0.2"
    },
    "version": "0.0.2",
    "steps": [{
        "sections": [{
            "name": "Slider step 1",
            "hidden": false,
            "fields": [{
                    "name": "name",
                    "title": "Name",
                    "$ref": "../controls/text-0.0.1.json"
                },
                {
                    "name": "outerItemsCount",
                    "title": "Select number of rotations",
                    "default": 4,
                    "type": "text",
                    "hidden": false,
                    "validation": {
                        "min": 1,
                        "max": 8,
                        "required": true,
                        "integer": true
                    }
                },
                {
                    "name": "displayDuration",
                    "title": "Select duration",
                    "default": 8,
                    "type": "text",
                    "hidden": false,
                    "validation": {
                        "min": 2,
                        "max": 30,
                        "required": true,
                        "integer": true
                    }
                }
            ]
        }]
    }, {
        "sections": [{
            "name": "Slider step 2",
            "hidden": false,
            "fields": [{
                "name": "items",
                "title": "Label Rotations",
                "default": [],
                "type": "listing",
                "hidden": false,
                "draggable": true,
                "validation": {
                    "required": true,
                    "itemsCount": "$.itemsCount"
                },
                "schema": [{
                    "id": "items",
                    "name": "items",
                    "fields": [{
                        "name": "Items",
                        "title": "Label Banners",
                        "default": [],
                        "type": "listing",
                        "draggable": true,
                        "validation": {
                            "required": true
                        },
                        "schema": [{
                            "name": "item",
                            "title": "Item",
                            "fields": [{
                                    "name": "itemId",
                                    "title": "ItemId",
                                    "default": "",
                                    "type": "text",
                                    "hidden": false,
                                    "validateUrl": false,
                                    "validation": {
                                        "required": true
                                    }
                                },
                                {
                                    "name": "schedule",
                                    "default": "",
                                    "type": "scheduler",
                                    "hidden": false,
                                    "validation": {
                                        "required": true
                                    }
                                },
                                {
                                    "name": "itemType",
                                    "title": "type",
                                    "default": "",
                                    "type": "select",
                                    "multiple": false,
                                    "hidden": false,
                                    "options": {
                                        "Banner": "banner",
                                        "Html5Banner": "html5banner",
                                        "Boczek": "odd"
                                    },
                                    "validation": {
                                        "required": true
                                    }
                                }
                            ]
                        }],
                        "hidden": false
                    }]
                }]
            }]
        }]
    }]

}